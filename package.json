{
  "name": "social-media",
  "version": "1.0.0",
  "description": "Social media app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "test": "mocha backend/**/*.test.js --recursive --exit",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlyfinos/social-media.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlyfinos/social-media/issues"
  },
  "homepage": "https://github.com/charlyfinos/social-media#readme",
  "dependencies": {
    "aws-sdk": "^2.886.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chai": "^4.3.4",
    "cloudinary": "^1.25.1",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^8.3.2",
    "mongodb-memory-server": "^6.9.6",
    "mongoose": "^5.12.3",
    "multer": "^1.4.2",
    "supertest": "^6.1.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7"
  }
}